#!/bin/bash

source "${OPENSHIFT_MYSQL_DIR}/lib/mysql_context"

function run_sql {
  echo "$@" | mysql_context "/usr/bin/mysql -h $OPENSHIFT_MYSQL_DB_HOST -P $OPENSHIFT_MYSQL_DB_PORT -u $OPENSHIFT_MYSQL_DB_USERNAME --password='$OPENSHIFT_MYSQL_DB_PASSWORD' newmypush --skip-column-names"
}

run_sql "UPDATE Variant SET description='my new NEW demo variant' where name='demo variant'"

touch "${OPENSHIFT_MYSQL_DIR}/fridaytest.txt"
